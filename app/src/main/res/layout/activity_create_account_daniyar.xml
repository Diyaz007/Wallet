<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.ui.auth.signIn.CreateAccountActivity">

    <ImageButton
        android:id="@+id/back_Button_daniyar2"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:onClick="onClickGoBackToWelcomeBackFromCreateAcc"
        android:background="@drawable/go_back_button_daniyar_second"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        android:importantForAccessibility="no">
    </ImageButton>

    <TextView
        android:id="@+id/textView_create_account"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:text="@string/create_account_text_daniyar"
        android:textColor="#FAFAFA"
        android:textSize="46sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.143" />

    <EditText
        android:id="@+id/editText_your_name_daniyar"
        android:layout_width="370sp"
        android:layout_height="60sp"
        android:background="@drawable/button_corners_daniyar"
        android:gravity="center_vertical"
        android:inputType="text"
        android:autofillHints="name"
        android:hint="@string/your_name_daniyare"
        android:textColorHint="#757575"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262"
        />

    <LinearLayout
        android:id="@+id/linearLayout23ve"
        android:layout_width="105sp"
        android:layout_height="60sp"
        android:background="@drawable/button_corners_daniyar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369">

        <ImageView
            android:id="@+id/kyrgyz_image"
            android:layout_width="30dp"
            android:layout_height="19dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10sp"
            android:background="@drawable/kgz_daniyar"
            android:importantForAccessibility="no">

        </ImageView>

        <TextView
            android:id="@+id/text_region_daniyar"
            android:layout_width="40sp"
            android:layout_height="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10sp"
            android:gravity="center"
            android:text="@string/_996"
            android:textColor="#757575"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <EditText
        android:id="@+id/editText_phone_number"
        android:layout_width="245sp"
        android:layout_height="60sp"
        android:autofillHints="phone"
        android:background="@drawable/button_corners_daniyar"
        android:gravity="center_vertical"
        android:hint="@string/phone_number_daniyar"
        android:inputType="phone"
        android:textColorHint="#757575"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369" />

    <DatePicker
        android:id="@+id/date_picker_year_of_born"
        android:layout_width="367dp"
        android:layout_height="64dp"
        android:background="@drawable/button_corners_daniyar"
        android:calendarTextColor="#757575"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:gravity="center_vertical"
        android:importantForAutofill="no"
        android:maxDate="01/01/2006"
        android:minDate="12/02/1924"
        android:scrollbarSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="370sp"
        android:layout_height="60sp"
        android:layout_marginTop="338dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/button_corners_daniyar"
        android:gravity="center_vertical"
        android:hint="@string/email_daniyar"
        android:inputType="textEmailAddress"
        android:textColorHint="#757575"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192" />

    <EditText
        android:id="@+id/password_edittext"
        android:layout_width="370sp"
        android:layout_height="60sp"
        android:layout_marginTop="338dp"
        android:autofillHints="password"
        android:background="@drawable/button_corners_daniyar"
        android:gravity="center_vertical"
        android:hint="@string/password_daniyar"
        android:inputType="textPassword"
        android:textColorHint="#757575"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.402" />

    <ImageButton
        android:id="@+id/text_hide_buttonpassword"
        android:layout_width="26sp"
        android:layout_height="25sp"
        android:background="@drawable/vectoraltynai"
        android:importantForAccessibility="no"
        android:textColor="#757575"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

    </ImageButton>

    <EditText
        android:id="@+id/edittext_confirm_password"
        android:layout_width="370sp"
        android:layout_height="60sp"
        android:layout_marginTop="338dp"
        android:autofillHints="password"
        android:background="@drawable/button_corners_daniyar"
        android:gravity="center_vertical"
        android:hint="@string/confirm_password_daniyar"
        android:inputType="textPassword"
        android:textColorHint="#757575"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615" />

    <ImageButton
        android:id="@+id/hidetext_buttonsecond"
        android:layout_width="26sp"
        android:layout_height="25sp"
        android:background="@drawable/vectoraltynai"
        android:importantForAccessibility="no"
        android:textColor="#757575"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.796"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

    </ImageButton>

    <Button
        android:id="@+id/button_singup"
        android:layout_width="370sp"
        android:layout_height="55sp"
        android:background="@drawable/background_buttons_altynai"
        android:onClick="onClickGoError"
        android:text="@string/sign_up_dani7yar"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914" />

</androidx.constraintlayout.widget.ConstraintLayout>