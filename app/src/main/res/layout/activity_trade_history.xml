<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="393dp"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity_Trade_History">

    <TextView
        android:id="@+id/trade_history_daniyar"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:text="@string/trade_history_daniyar"
        android:textColor="#FAFAFA"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <TextView
        android:id="@+id/date_daniyar"
        android:layout_width="116dp"
        android:layout_height="25dp"
        android:text="@string/date_daniyar"
        android:textColor="#FAFAFA"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219" />

    <LinearLayout
        android:id="@+id/sell_AUD_daniyar"
        android:layout_width="325dp"
        android:layout_height="85dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458">

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/prodazhatext_daniyar"
            android:textColor="#7C7C7C"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5sp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/dollar_icon_daniyar"
                android:contentDescription="@string/dollar" />

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="25sp"
                android:layout_marginTop="-3sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="33dp"
                    android:layout_height="18dp"
                    android:text="@string/audtextdaniyar"
                    android:textColor="#FAFAFA"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/avsraliiyskiy_dollar_textdaniyar"
                    android:textColor="#FAFAFA"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginStart="45sp"
                android:layout_marginTop="-3sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="16dp"
                    android:text="@string/a_19_72_price_daniyar"
                    android:textColor="#FAFAFA"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="3.5sp"
                    android:gravity="center_horizontal"
                    android:text="@string/_14_08price_daniyar"
                    android:textColor="#FAFAFA"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buy_AUD_daniyar"
        android:layout_width="325dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/pokupkatextdaniyar"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#32C95C">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5sp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/dollar_icon_daniyar"
                android:layout_gravity="center"
                android:layout_marginStart="10dp">
            </ImageView>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:layout_marginStart="25sp"
                android:layout_marginTop="-3sp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="33dp"
                    android:layout_height="18dp"
                    android:text="@string/audtextdaniyar"
                    android:textColor="#FAFAFA"
                    android:textSize="15sp">
                </TextView>

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="16dp"
                    android:textSize="12sp"
                    android:textColor="#FAFAFA"
                    android:layout_marginTop="8dp"
                    android:text="@string/avsraliiyskiy_dollar_textdaniyar">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="34dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginStart="45sp"
                android:layout_marginTop="-3sp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="16dp"
                    android:text="@string/a_19_72_price_daniyar"
                    android:textColor="#FAFAFA"
                    android:textSize="15sp">
                </TextView>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="14dp"
                    android:text="@string/_14_08price_daniyar"
                    android:textColor="#FAFAFA"
                    android:textSize="13sp"
                    android:layout_marginTop="3.5sp"
                    android:gravity="center_horizontal">
                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>