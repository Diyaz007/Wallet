<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ConfirmationCode">

    <ImageButton
        android:id="@+id/backButtonAltynaiConfirm"
        android:layout_width="20sp"
        android:layout_height="30sp"
        android:onClick="onClickGoMainAlt3"
        android:background="@drawable/backbuttonaltynai"
        android:contentDescription="@string/backbuttonaltynaiDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/ConfirmationCodeTextAlt"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:text="@string/confirmation_code"
        android:textColor="@color/white"
        android:textSize="37sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237" />


    <TextView
        android:id="@+id/emailtextConfAlt"
        android:layout_width="368dp"
        android:layout_height="28dp"
        android:text="@string/enter_the_code_sent_to_some_mail_com"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.342" />

    <EditText
        android:id="@+id/firstNumberOfConfCode"
        android:layout_width="54dp"
        android:layout_height="64dp"
        android:background="#251E34"
        android:gravity="center"
        android:hint="@string/_1"
        android:inputType="number"
        android:maxLength="1"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <EditText
        android:id="@+id/fourthNumberOfConfCode"
        android:layout_width="54dp"
        android:layout_height="64dp"
        android:layout_marginEnd="44dp"
        android:hint="@string/_4"
        android:textColorHint="@color/white"
        android:gravity="center"
        android:background="#251E34"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <EditText
        android:id="@+id/thirdNumberConfCode"
        android:layout_width="54dp"
        android:layout_height="64dp"
        android:background="#251E34"
        android:gravity="center"
        android:hint="@string/_3"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <EditText
        android:id="@+id/secondNumberConfCode"
        android:layout_width="54dp"
        android:layout_height="64dp"
        android:background="#251E34"
        android:gravity="center"
        android:hint="@string/_2"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

</androidx.constraintlayout.widget.ConstraintLayout>