<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="430sp"
    android:layout_height="920sp"
    tools:context=".Activity_Email_Confirmation"

    android:background="@drawable/background">


    <LinearLayout
        android:id="@+id/linearLayout_back_daniyar2"
        android:layout_width="110dp"


        android:layout_height="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062">


        <ImageView
            android:layout_width="17dp"
            android:layout_height="22sp"
            android:layout_marginTop="7sp"

            android:background="@drawable/img_back_daniyar" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="31dp"
            android:layout_marginStart="12sp"
            android:gravity="center_vertical"
            android:text="@string/text_back_daniyar"
            android:textColor="#DEDEDE"
            android:textSize="25sp"

            >


        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="398sp"
        android:layout_height="44sp"
        android:text="@string/email_confirmation_daniyar"
        android:textColor="#FAFAFA"
        android:textSize="37sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.214">

    </TextView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="404sp"
        android:layout_height="46sp"
        android:text="@string/please_enter_the_6_digit_code_sent_to_your_email_the_code_will_be_valid_for_30_minutes_daniyar"
        android:textColor="#FAFAFA"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="82sp"
        android:layout_height="35sp"
        android:text="@string/_29_57_daniyar"
        android:textColor="#FFFFFF"
        android:textSize="29sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.372" />


    <LinearLayout
        android:layout_width="384sp"
        android:layout_height="64sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.442">

        <EditText
            android:layout_width="54sp"
            android:layout_height="64sp"
            android:background="@drawable/button_corners"
            android:gravity="center"
            android:text="@string/_1_daniyar"
            android:textColor="#FAFAFA"
            android:textSize="19sp">

        </EditText>

        <EditText
            android:layout_width="54sp"
            android:layout_height="64sp"
            android:layout_marginStart="12sp"
            android:background="@drawable/button_corners"
            android:gravity="center"
            android:text="@string/_2_daniyar"
            android:textColor="#FAFAFA"
            android:textSize="19sp">

        </EditText>

        <EditText
            android:layout_width="54sp"
            android:layout_height="64sp"
            android:layout_marginStart="12sp"
            android:background="@drawable/button_corners"
            android:gravity="center"
            android:text="@string/_3_daniyar"
            android:textColor="#FAFAFA"
            android:textSize="19sp">

        </EditText>

        <EditText
            android:layout_width="54sp"
            android:layout_height="64sp"
            android:layout_marginStart="12sp"
            android:background="@drawable/button_corners"
            android:gravity="center"
            android:text="@string/_4_daniyar"
            android:textColor="#FAFAFA"
            android:textSize="19sp">

        </EditText>

        <EditText
            android:layout_width="54sp"
            android:layout_height="64sp"
            android:layout_marginStart="12sp"
            android:background="@drawable/button_corners"
            android:gravity="center"
            android:text="@string/_5_daniyar"
            android:textColor="#FAFAFA"
            android:textSize="19sp">

        </EditText>

        <EditText
            android:layout_width="54sp"
            android:layout_height="64sp"
            android:layout_marginStart="12sp"
            android:background="@drawable/button_corners"
            android:gravity="center"
            android:text="@string/_6_daniyar"
            android:textColor="#FAFAFA"
            android:textSize="19sp">

        </EditText>

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="142sp"
        android:layout_height="23sp"
        android:text="@string/send_code_again__daniyar"
        android:textColor="#FAFAFA"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.539" />

    <TextView
        android:layout_width="142sp"
        android:layout_height="23sp"
        android:text="@string/line_under_the_text_daniyar"
        android:textColor="#FAFAFA"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538"
        android:layout_marginTop="8sp"/>

